@model Simple.Core.Model.Entity.Product
@{
    ViewBag.Title = "Ürün detayı";
}

<h2>Ürün Detayı</h2>

<div class="productBox">
    <p class="title">@Model.Name</p>
    <img src="@Model.ImageUrl" />
    <p>
        @Model.Brand
    </p>
    <p>
        @Model.Price.ToString("##,## ₺")
    </p>
    <p>
        @Model.Description
    </p>
    <a href="#" class="btn btn-default"><i class="bi bi-basket-fill"></i>Sepete At</a>
</div>