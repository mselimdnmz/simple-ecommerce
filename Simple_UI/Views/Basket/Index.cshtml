@model IEnumerable<Simple.Core.Model.Entity.Basket>

<table class="table">
    <tr>
        <th>Ürün</th>
        <th>Adet</th>
        <th>Sil</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<a href="Siparisver" class="btn btn-primary"><i class="bi bi-credit-card-fill"></i> Satın Al</a>